#!/bin/bash

BASE="../../../images"
COUNT=0
IDX=$(cat $BASE/count.txt);
DIR="$BASE/jpg$IDX"
IP=$(ipconfig getifaddr en0)
echo "
Connect RPi to this address: $IP
"
for i in $DIR/*
do
	((COUNT++))
done
((COUNT--))
echo "
$COUNT
$DIR
"
if [ $1 ]
then
	sudo ./run "$COUNT" "$DIR/i-*.jpg" "$IP"
else
	./run "$COUNT" "$DIR/i-*.jpg" "$IP"
fi
