#!/bin/bash

BASE="../../../images"
COUNT=0
IDX=$(cat $BASE/count.txt);
DIR="$BASE/jpg$IDX"
IP=$(ipconfig getifaddr en0)
echo "
Connect RPi to this address: $IP
"
for i in $DIR/*
do
	((COUNT++))
done
((COUNT--))
echo "
$COUNT
$DIR
"
if [ "$1" ]
then
	sudo ./run-nogui "$COUNT" "$DIR/i-*.jpg" "$IP" "$1" "$2"
else
	pd -nojackconnect -listdev -version
	echo "Please provide input and output device name, e.g.'Built-in Input' 'Built-in Output'"
	exit 1
fi
